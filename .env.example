# Operations Data Consolidation System - Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=operations_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Data Source Paths (Local directories where CSV/XLSX files are located)
PRODUCTION_LOGS_PATH=./data/sources/production_logs
QUALITY_LOGS_PATH=./data/sources/quality_logs
SHIPPING_LOGS_PATH=./data/sources/shipping_logs

# Auto-refresh configuration (in milliseconds)
AUTO_REFRESH_INTERVAL=86400000

# API Configuration
API_TIMEOUT=30000
